@model Wright.Models.MowerTypeModels.MowerTypeCreate

@{
    ViewData["Title"] = "Create A Mower Type";
}

<h1>Create A Mower Type</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RidingMower" class="control-label"></label>
                <input asp-for="RidingMower" class="form-control" placeholder="Riding Mower T/F">
                <span asp-validation-for="RidingMower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoweredAssist" class="control-label"></label>
                <input asp-for="PoweredAssist" class="form-control" placeholder="PoweredAssist T/F">
                <span asp-validation-for="PoweredAssist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Electric" class="control-label"></label>
                <input asp-for="Electric" class="form-control" placeholder="Electric T/F">
                <span asp-validation-for="Electric" class="text-danger"></span>
            </div>
            <br>
            <hr>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
        <br>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
